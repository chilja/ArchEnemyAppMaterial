<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

<style name="AppTheme" parent="Theme.AppCompat">  
    <item name="windowActionBar">false</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="colorPrimary">@color/primary</item>
</style>

<style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Dialog">
    <item name="buttonBarStyle">@style/CustomButtonBarStyle</item>>
    <item name="buttonBarButtonStyle">@style/CustomButtonBarButtonStyle</item>
</style>

<style name="CustomButtonBarStyle" parent="@android:style/ButtonBar">
	<item name="android:textColor">@color/accent</item>
</style>

<style name="CustomButtonBarButtonStyle" parent="@android:style/Widget.Button">
	<item name="android:textColor">@color/accent</item>
</style>
   
</resources>
