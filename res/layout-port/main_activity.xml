<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:animateLayoutChanges="true">

 	<FrameLayout 
        android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:animateLayoutChanges="true">	 
			    		
		<FrameLayout         
	        android:layout_width="match_parent"
			android:layout_height="@dimen/header_height_full"
			android:id="@+id/header">				
		    <ImageView 
		        android:id="@+id/headerImage"
		        android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/band"
				android:scaleType="centerCrop"
				android:background="@color/black"/>
	    </FrameLayout>
	    
		<FrameLayout
			android:id="@+id/fragmentContainer"
			android:layout_width="match_parent"
			android:layout_height="match_parent" 
			android:animateLayoutChanges="true"
			android:elevation="16dp"/>
		                	
	</FrameLayout>
    
	<LinearLayout 
	    android:id="@+id/tabs"
        android:layout_width="match_parent"
		android:layout_height="@dimen/tab_height"
		android:orientation="horizontal"
		android:layout_gravity="top"
		android:gravity="bottom"
		android:translationY="@dimen/max_tab_translation_y"
		android:elevation="24dp"
		android:animateLayoutChanges="true">
					
      	<ImageView
			android:src="@drawable/facebook_medium"
			android:id="@+id/facebookTab"
			android:layout_width="44dp"
			android:layout_height="44dp"
			android:layout_gravity="center_horizontal|bottom"
			android:gravity="center_horizontal|bottom"
			android:layout_weight="1"
			android:padding="8dp"
			android:animateLayoutChanges="true"
			android:background="?android:attr/selectableItemBackground"/>
   						
        <ImageView
			android:src="@drawable/twitter"
			android:id="@+id/twitterTab"
			android:layout_width="44dp"
			android:layout_height="44dp"
			android:layout_gravity="center_horizontal|bottom"
			android:gravity="center_horizontal|bottom"
			android:layout_weight="1"
			android:padding="8dp"
			android:animateLayoutChanges="true"
			android:background="?android:attr/selectableItemBackground"/>

   	</LinearLayout>    

	<include layout="@layout/toolbar"
          	android:id="@+id/toolbar"/>	
          	
</FrameLayout>

